#!/bin/bash
#cloud controller

device_name=$(./phy_intf)

cfg_file=ifcfg-$device_name

echo "Creating $cfg_file.clc ..."

echo "DEVICE=$device_name
BOOTPROTO=static
IPADDR=10.1.1.2
NETMASK=255.255.255.0
ONBOOT=yes" > $cfg_file

echo "Copying $cfg_file to /etc/sysconfig/network-scrip
ts ..."
cp $cfg_file $cfg_file.clc

sudo mv $cfg_file /etc/sysconfig/network-scripts/

echo "Restarting service network..."
sudo service network restart
 
