#!/bin/bash

#Register Walrus. Run this on CLC.
if [ "$1" == "" ]; then
	echo "Usage: ./walrus.register <walrus_IP_address> <walrus_name>(walrus-[hostname])."
	exit
fi

echo "Deregistering Walrus-10-1-1-2..."
sudo /usr/sbin/euca_conf --deregister-walrus walrus-10-1-1-2

echo "Registering Walrus: IP=$1, Name=$2..."
sudo /usr/sbin/euca_conf --register-walrus --partition walrus --host $1 --component $2

